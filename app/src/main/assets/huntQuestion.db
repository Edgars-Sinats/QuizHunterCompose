BEGIN TRANSACTION;
DROP TABLE IF EXISTS "topics_table";
CREATE TABLE IF NOT EXISTS "topics_table" (
	"topic"	TEXT NOT NULL,
	"topic_id"	INTEGER NOT NULL,
	PRIMARY KEY("topic_id")
);
DROP TABLE IF EXISTS "question_table";
CREATE TABLE IF NOT EXISTS "question_table" (
	"question"	TEXT NOT NULL,
	"answer_1"	TEXT NOT NULL,
	"answer_2"	TEXT NOT NULL,
	"answer_3"	TEXT,
	"answer_4"	TEXT,
	"correct_answer"	INTEGER NOT NULL,
	"topic_id"	INTEGER NOT NULL,
	"question_id"	INTEGER NOT NULL,
	"correct_answers"	INTEGER NOT NULL DEFAULT 0,
	"wrong_answers"	INTEGER NOT NULL DEFAULT 0,
	"non_answers"	INTEGER NOT NULL DEFAULT 0,
	"average_time_sec"	INTEGER NOT NULL DEFAULT 0,
	"last_time_sec"	INTEGER NOT NULL DEFAULT 0,
	PRIMARY KEY("question_id")
);
INSERT INTO "main"."question_table" ("question", "answer_1", "answer_2", "answer_3", "answer_4", "correct_answer", "question_id", "topic_id", "correct_answers", "wrong_answers", "non_answers", "average_time_sec", "last_time_sec") VALUES ('Vai medīšana, ja nav  iegūta attiecīgās  sezonas mednieka  sezonas karte, ir  uzskatāma par  nelikumīgām  medībām?', 'Nē', 'Nē, ja medības  notiek atļautajā  termiņā.', 'Jā', 'Nē, ja nekas nav  nomedīts', '3', '1', '1', '0', '0', '0', '0', '0');
INSERT INTO "main"."question_table" ("question", "answer_1", "answer_2", "answer_3", "answer_4", "correct_answer", "question_id", "topic_id", "correct_answers", "wrong_answers", "non_answers", "average_time_sec", "last_time_sec") VALUES ('Kad medniekiem ir  atļauts pārvietot  nomedīto limitēto  medījamo dzīvnieku  no vietas, kur tas  nomedīts?', 'pēc tam, kad medību  vadītājs noskaidrojis  katra šāviena  rezultātu un paziņojis  par masta vai  medību beigām.', 'pēc tam, kad medību vadītājs aizpildījis medību atļauju.', 'pēc tam, kad medību  vadītājs aizpildījis  medību pārskatu un  devis rīkojumu  medījumu  transportēt uz  apstrādes vietu.', '', '3', '2', '1', '0', '0', '0', '0', '0');
INSERT INTO "main"."question_table" ("question", "answer_1", "answer_2", "answer_3", "answer_4", "correct_answer", "question_id", "topic_id", "correct_answers", "wrong_answers", "non_answers", "average_time_sec", "last_time_sec") VALUES ('Kad ir atļauts uzsākt  ievainota limitētā  medījamā dzīvnieka  izsekošanu  dzinējmedībās?', 'pēc masta  izdzīšanas un  mednieku  noņemšanas no  numuriem.', 'pēc tam, kad medību vadītājs noskaidrojis katra šāviena rezultātu, aizpildījis medību atļauju, ar viņa atļauju un ievērojot viņa norādījumus.', 'pēc masta  izdzīšanas, paziņojot  blakus numuros  stāvošajiem  medniekiem, ka  sekos šautajam  dzīvniekam pa  pēdām 50 metrus, lai  noskaidrotu savu  šāvienu rezultātus.', '', '2', '3', '1', '0', '0', '0', '0', '0');
INSERT INTO "main"."question_table" ("question", "answer_1", "answer_2", "answer_3", "answer_4", "correct_answer", "question_id", "topic_id", "correct_answers", "wrong_answers", "non_answers", "average_time_sec", "last_time_sec") VALUES ('Kad ir jāaizpilda  medību atļauja par  limitētā medījamā  dzīvnieka  ievainošanu?', 'kad  medību vadītājs  ir noskaidrojis katra  šāviena rezultātu un  konstatējis, ka  dzīvnieks ir ievainots  un aiziet ar asins  pēdām .', 'ja dzīvnieks ar asins  pēdām ieiet  blakusesošajā  medību platībā.', 'ja dzīvnieks izsekots  mastā vai tam  pieguļošajā medību  platībā un nav  atrasts kritis.', '', '1', '4', '1', '0', '0', '0', '0', '0');
INSERT INTO "main"."question_table" ("question", "answer_1", "answer_2", "answer_3", "answer_4", "correct_answer", "question_id", "topic_id", "correct_answers", "wrong_answers", "non_answers", "average_time_sec", "last_time_sec") VALUES ('Vai ir atļauta  ievainota limitētā  medījamā dzīvnieka  izsekošana, ja nav  aizpildīta medību  atļauja?', 'ir atļauta, ja  ievainotais  medījamais  dzīvnieks nav izgājis  no izdzītā masta.', 'ir atļauta  pieredzējušam  medniekam ar  medību vadītāja  atļauju.', 'nav atļauta.', '', '3', '5', '1', '0', '0', '0', '0', '0');
